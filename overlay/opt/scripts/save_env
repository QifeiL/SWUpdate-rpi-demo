#!/bin/sh
# save_env - A shell script to save environnement variables file


save_environnement_file () {

  for var in $(cat $ENVIRONNEMENT_SCRIPT | cut -d= -f1) 
  do 
    set | grep $var | sed -e '/var/d' >> "$ENVIRONNEMENT_SCRIPT.tmp" 
  done

  sort -u "$ENVIRONNEMENT_SCRIPT.tmp" > $ENVIRONNEMENT_SCRIPT
  rm "$ENVIRONNEMENT_SCRIPT.tmp"
}

save_environnement_file
